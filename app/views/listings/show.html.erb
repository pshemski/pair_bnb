<div class='col-md-offset-1 col-md-10'>
  <table id='listing-index'>
		<tr class='well'>
			<td>
				<div class="listing-index-details">
					<p>Type of room: <%= @listing.room_type %></p>
					<p>Guests limit: <%= @listing.guests_limit %></p>
					<p>Location: <%= @listing.location %></p>
					<p>Price per night: <%= @listing.price %></p>
					<% if @listing.user_id == current_user.id %>
						<p>Hosted by: you</p>
					<% else %>
						<p>Hosted by: <%= @listing.user.email %></p>
					<% end %>
					<p><%= link_to 'Make a reservation', "/reservations/new?listing_id=#{@listing.id}" %></p>
				</div>
			</td>
			<td class='listing-index-image'>
				<p><%= image_tag(@listing.images.first.big_thumb) %></p>
				<p><% @listing.images.each do |image| %>
					<%= image_tag(image.thumb) %>
				<% end %></p>
			</td>
		</tr>
	</table>
</div>	